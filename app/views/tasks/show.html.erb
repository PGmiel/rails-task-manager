<div class="container">
  <div class="d-flex justify-content-between">
    <h1><%= @task.title %></h1>
    <button type="button" class="btn btn-primary"><%= link_to "Edit", edit_task_path %></button>
  </div>
  <p class="text"><%= @task.details %></p>
  <p class="check"><%= @task.completed %></p>
  <%= link_to "Delete", task_path(@task), method: :delete %>
  <%= link_to "Back to list", tasks_path %>
</div>
